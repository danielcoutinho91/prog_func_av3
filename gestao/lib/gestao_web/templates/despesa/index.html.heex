<h1>Lista de Despesas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Data</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for despesa <- @despesas do %>
    <tr>
      <td><%= despesa.nome %></td>
      <td><%= despesa.valor %></td>
      <td><%= despesa.data %></td>

      <td>
        <span><%= link "Detalhes", to: Routes.despesa_path(@conn, :show, despesa) %></span>
        <span><%= link "Editar", to: Routes.despesa_path(@conn, :edit, despesa) %></span>
        <span><%= link "Deletar", to: Routes.despesa_path(@conn, :delete, despesa), method: :delete, data: [confirm: "VocÃª tem certeza?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "Nova Despesa", to: Routes.despesa_path(@conn, :new) %></span>
